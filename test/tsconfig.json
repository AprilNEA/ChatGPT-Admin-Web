{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "frontend": [
        "../packages/frontend/src"
      ],
      "frontend/*": [
        "../packages/frontend/src/*"
      ],
      "backend": [
        "../packages/backend/src"
      ],
      "backend/*": [
        "../packages/backend/src/*"
      ],
      "shared": [
        "../packages/shared/src"
      ],
      "shared/*": [
        "../packages/shared/src/*"
      ],
      "@test": [
        "."
      ],
      "@test/*": [
        "./*"
      ],
      "@prisma/client": [
        "../prisma/client"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
